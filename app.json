{
  "expo": {
    "name": "Snap Receipt",
    "slug": "snap-receipt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "snapreceipt",
    "userInterfaceStyle": "automatic",
    "description": "Capture and digitize receipts instantly with AI-powered OCR technology. Extract purchase details, calculate totals, and manage receipts with ease.",
    "sdkVersion": "54.0.0",
    "newArchEnabled": true,
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.snapreceipt.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to capture receipt photos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select receipt images.",
        "CFBundleDisplayName": "Snap Receipt",
        "CFBundleName": "Snap Receipt"
      }
    },
    "android": {
      "package": "com.snapreceipt.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#0A7EA4",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "be8b452d-a1b0-40d0-b43e-253182869530"
      }
    }
  }
}
